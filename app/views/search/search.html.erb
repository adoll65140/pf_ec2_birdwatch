<% if @model == "user" %>
<div class="col-md-10 mx-auto">
  <h2>ユーザー検索</h2>
</div>
  <% @users.each do |user| %>
  <div class="col-md-10 mx-auto">
  <div class="card shadow p-5">
      <div class="card-content">
    <%= link_to user_path(user.id) do %>
      <%= attachment_image_tag @user, :icon, :fill, 60, 60, fallback: "no_image.jpg" %>
      <%= user.nickname %>
    <% end %>
      <%= user.introduction %>
    </div>
  </div>
  </div>
  <% end %>

<% elsif @model == "post"%>
<div class="col-md-10 mx-auto">
  <h2>投稿検索</h2>
</div>
  <% @posts.each do |post| %>
  <div class="col-md-10 mx-auto">
  <div class="card shadow p-5">
      <div class="card-content">
      <p>タイトル：<%= link_to post_path(post.id) do %><%= post.title %></p>
    <% end %>
      <div>

        <p><%= link_to user_path(post.user.id) do %><%= attachment_image_tag post.user, :icon, :fill, 60, 60, fallback: "no_image.jpg" %>
        <%= post.user.nickname %></p><% end %>
        <%= attachment_image_tag post, :image, :fill, 200, 200 %>
        <p><%= post.body %></p>
        <p><%= "#{post.post_comments.count} コメント" %></p>
      </div>

    </div>
    </div>
    </div>
  <% end %>
<% else %>
  <div class="col-md-10 mx-auto">
    <h2>鳥検索</h2>
  </div>
  <% @birds.each do |bird| %>
  <div class="col-md-10 mx-auto">
  <div class="card shadow p-5">
      <div class="card-content">


        <p>
          <%= attachment_image_tag bird, :bird_icon, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>

          お名前：<%= link_to bird_path(bird.id) do %><%= link_to bird_path(bird.id) do %>
            <%= bird.bird_name %>
          <% end %>
        </p>
    <p>年齢：<%= bird.bird_age %>歳</p>
    <p>紹介分：<%= bird.bird_introduction %></p>
    <p><%= "#{bird.bird_comments.count} コメント" %></p>
  </div>
  </div>
  </div>
    <% end %>
  <% end %>
<% end %>