
<h1>ユーザー編集</h1>
<%= form_with model: @user, local:true do |f| %>
  
  <%= attachment_image_tag @user, :icon, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">アイコン</label>
  <%= f.attachment_field :icon %>
  <h4>ユーザー名</h4>
  <%= f.text_field :nickname %>
  <%= attachment_image_tag @user, :back_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">背景</label>
  <%= f.attachment_field :back_image %>
  <h4>紹介分</h4>
  <%= f.text_area :introduction %>
  <%= f.submit '投稿' %>
<% end %>