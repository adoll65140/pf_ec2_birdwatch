<h1>迷子の鳥追加</h1>
<%= form_with model: @lost_bird, local:true do |f| %>
  <h4>名前</h4>
  <%= f.text_field :lost_bird_name %>
  <h4>種類</h4>
  <%= f.text_field :lost_bird_breed %>
  <h4>画像</h4>
  <%= f.attachment_field :bird_image %>
  <h4>場所</h4>
  <%= f.text_field :lost_place %>
  <h4>特徴</h4>
  <%= f.text_field :feature %>
  <h4>状況説明</h4>
  <%= f.text_area :lost_introduction %>
  <h4>年齢</h4>
  <%= f.text_field :lost_bird_age %>歳
  <h4>鳥説明</h4>
  <%= f.text_area :lost_bird_introduction %>
  <input name="lost_day" type="date" />
  <%= f.submit '投稿' %>
<% end %>