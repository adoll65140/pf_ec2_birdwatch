<% @adoptions.each do |adoption| %>
<%= link_to adoption_path(adoption.id) do %>
<div>
  <p>タイトル：<%= adoption.title %></p>
  <%= attachment_image_tag adoption, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
 <p>種類：<%= adoption.breed.name %></p>
  <p>性別：<%= adoption.sex %></p>
  <p>取引場所：<%= adoption.address_city %><%= adoption.prefecture_name %></p>
</div>
<% end %>
<% end %>