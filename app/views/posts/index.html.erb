  <div class="col-md-10 mx-auto">
  <h2>投稿一覧</h2><%= link_to "鳥一覧", birds_path, class: "mr-3"%><%= link_to "ユーザ一覧", users_path %>
  </div>
  <% @posts.each do |post| %>
  <div class="col-md-10 mx-auto">
  <div class="card shadow p-5">
      <div class="card-content">

      <p>タイトル：<%= link_to post_path(post.id) do %><%= post.title %></p>
    <% end %>
      <div>

        <p><%= link_to user_path(post.user.id) do %><%= attachment_image_tag post.user, :icon, :fill, 60, 60, fallback: "no_image.jpg" %>
        <%= post.user.nickname %></p><% end %>
        <%= attachment_image_tag post, :image, :fill, 200, 200 %>
        <p><%= post.body %></p>
        <p><%= "#{post.post_comments.count} コメント" %></p>
      </div>

    </div>
    </div>
    </div>
  <% end %>
