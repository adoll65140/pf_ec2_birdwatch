<div class="row">
  <div class="col-md-10 mx-auto">
<h2>保護した鳥の情報</h2>
<%= form_with model: @protection_bird, local:true do |f| %>
<table class='table table-borderless table-sm'>
 <tbody>
   <tr>
      <th>
        <h4>タイトル</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_field :title %>
        </div>
      </td>
    </tr>
   <tr>
      <th>
        <h4>種類</h4>
      </th>
      <td>
        <div class="field">
          <%= f.collection_select :breed_id, Breed.all, :id, :name, {include_blank: "選択してください"} %>
        </div>
      </td>
    </tr>
     <tr>
      <th>
        <h4>性別</h4>
      </th>
      <td>
        <div class="field">
          <%= f.label :オス  %>
          <%= f.radio_button :sex, :オス %>
          <%= f.label :メス  %>
          <%= f.radio_button :sex, :メス %>
          <%= f.label :不明  %>
          <%= f.radio_button :sex, :不明 %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        <h4>鳥の色</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_field :color %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        <h4>写真</h4>
      </th>
      <td>
        <div class="field">
          <%= f.attachment_field :image %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        <h4>地域:都道府県</h4>
      </th>
      <td>
        <div class="field">
          <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, id: 'prefecture_code' %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        <h4>市区町村</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_field :protect_place %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        <h4>特徴</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_area :feature %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        <h4>その他</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_area :bird_introduction %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        <h4>保護時の状況説明</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_area :protect_introduction %>
        </div>
      </td>
    </tr>
     <tr>
      <th>
        <h4>保護日</h4>
      </th>
      <td>
        <div class="field">
          <%= f.date_field :protect_day %>
        </div>
      </td>
    </tr>
    <tr>
      <td></td>
        <th><%= f.submit '投稿',class: "btn btn-success"%></th>
      <td></td>
    </tr>
    </tbody>
  </table>
<% end %>
          </div>
        </div>