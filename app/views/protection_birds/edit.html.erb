<h1>保護鳥の編集</h1>
<%= form_with model: @protection_bird, local:true do |f| %>
  <h4>種類</h4>
  <%= f.collection_select :breed_id, Breed.all, :id, :name, {include_blank: "選択してください"} %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>場所</h4>
  <%= f.text_field :protect_place %>
  <h4>特徴</h4>
  <%= f.text_field :feature %>
  <h4>状況説明</h4>
  <%= f.text_area :protect_introduction %>
  <h4>鳥説明</h4>
  <%= f.text_area :bird_introduction %>
  <input name="protact_day" type="date" />
  <%= f.submit '編集' %>
<% end %>
<%= link_to "削除", protection_bird_path(@protection_bird), method: :delete %>