<div class="row">
  <div class="col-md-10 mx-auto">
<h1>不用品編集</h1>
<%= form_with model: @item, local:true do |f| %>
<table class='table table-borderless table-sm'>
 <tbody>
    <tr>
      <th>
        <h4>タイトル</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_field :item %>
        </div>
      </td>
    </tr>
  　<tr>
      <th>
        <h4>種類</h4>
      </th>
      <td>
        <div class="field">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "選択してください"} %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        <h4>説明</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_area :introduction %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        <h4>写真</h4>
      </th>
      <td>
        <div class="field">
          <%= f.attachment_field :image %>
        </div>
      </td>
    </tr><tr>
      <th>
        <h4>地域:都道府県</h4>
      </th>
      <td>
        <div class="field">
          <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, id: 'prefecture_code' %>
        </div>
      </td>
    </tr>
    <tr>
      <th>
        <h4>地域:市区町村</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_field :address_city, id: "address_city" %>
        </div>
      </td>
    </tr>
     <tr>
      <td><%= link_to "削除", item_path(@item), method: :delete,class: "btn btn-danger" %></td>
        <th><%= f.submit '編集を保存',class: "btn btn-success"%></th>
      <td></td>
    </tr>
  </tbody>
</table>
<% end %>
</div>
</div>