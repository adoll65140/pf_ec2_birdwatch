<div>
  <p>タイトル：<%= @item.item %></p>
  <%= attachment_image_tag @item, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <p>説明：<%= @item.introduction %></p>
  <p>取引場所：<%= @item.address_city %><%= @item.prefecture_name %></p>
  <p>ジャンル：<%= @item.genre.name %></p>
  
  <%= link_to "編集", edit_item_path(@item.id) %> 
  <%= link_to "削除", item_path(@item), method: :delete %>
  
</div>