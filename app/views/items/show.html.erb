<%= render 'search', message:"不用品検索" %>
<div>
  <p>タイトル：<%= @item.item %></p>
  <%= attachment_image_tag @item, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <p>説明：<%= @item.introduction %></p>
  <p>取引場所：<%= @item.address_city %><%= @item.prefecture_name %></p>
  <p>ジャンル：<%= @item.genre.name %></p>
  <% if @item.user.id == current_user.id %>
    <%= @msg %>
  <% else %>
    <% if @isRoom == true %>
        <p><%= link_to 'DMへ', room_path(@roomId) %></p>
    <% else %>
        <%= form_for @room do |f| %>
            <%= fields_for @entry do |e|%>
                <% e.hidden_field :user_id, value: @item.user.id %>
            <% end %>
        <%= f.submit "DMを開始する"%>
        <% end %>
    <% end %>
<% end %>
  <%= link_to "編集", edit_item_path(@item.id) %> 
  <%= link_to "削除", item_path(@item), method: :delete %>
  
</div>