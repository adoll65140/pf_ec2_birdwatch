<% if user_signed_in? %>
<h1>投稿</h1>
<%= form_with model: @post, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>内容</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
<% @posts.each do |post| %>
<% if post.user == current_user %>
  <%= link_to '消去', post_path(post), method: :delete %>
  <% end %>
<%= link_to post_path(post.id) do %>
<div>
  <%= attachment_image_tag post.user, :icon, :fill, 60, 60, fallback: "no_image.jpg" %>
  <p>ユーザー名：<%= post.user.nickname %></p>
  <p>タイトル：<%= post.title %></p>
  <%= attachment_image_tag post, :image, :fill, 200, 200 %>
  <p>内容：<%= post.body %></p>

</div>
<% end %>
<% end %>


<% else %>
top
<% end %>
