<div class="col-md-10 mx-auto">
  <h2>投稿</h2>
</div>
<div class="col-md-10 mx-auto">
  <div class="card shadow p-5">
<%= form_with model: @post, local:true do |f| %>
<table class='table table-borderless table-sm'> 
 <tbody>
    <tr>
      <th>
        <h4>画像</h4>
      </th>
      <td>
        <div class="field">
          <%= f.attachment_field :image %>
        </div>
      </td>
    </tr>
     <tr>
      <th>
        <h4>タイトル</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_field :title %>
        </div>
      </td>
    </tr>
     <tr>
      <th>
        <h4>内容</h4>
      </th>
      <td>
        <div class="field">
          <%= f.text_area :body %>
        </div>
      </td>
    </tr>
    <tr>
      <td></td>
        <th><%= f.submit '投稿',class: "btn btn-success shadow"%></th>
      <td></td>
    </tr>
    </tbody>
  </table>
<% end %>
</div>
</div>
<% @posts.each do |post| %>
 <div class="col-md-10 mx-auto">
  <div class="card shadow p-5">
      <div class="card-content">

      <p>タイトル：<%= link_to post_path(post.id) do %><%= post.title %></p>
    <% end %>
      <div>

        <p><%= link_to user_path(post.user.id) do %><%= attachment_image_tag post.user, :icon, :fill, 60, 60, fallback: "no_image.jpg" %>
        <%= post.user.nickname %></p><% end %>
        <%= attachment_image_tag post, :image, :fill, 200, 200 %>
        <p><%= post.body %></p>
        <p><%= "#{post.post_comments.count} コメント" %></p>
      </div>

    </div>
    </div>
    </div>
  <% end %>


